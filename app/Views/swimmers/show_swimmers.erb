<h1> Here are your swimmers, <%= @instructor %>!</h1>
<% @instructor.swimmers.each do |swimmer| %>
  <div>
    <%= swimmer.name %>
    <%= swimmer.age %>
    <%= swimmer.notes %>
  </div>
<% end %>

<form method="post" action="/swimmers/<%= @swimmer.id %>/delete">
  <input type="hidden" name="_method" value="DELETE" />
  <input type="submit" value="Delete Swimmer"/>
</form>

<form method="post" action="/swimmers/<%= @swimmer.id %>/edit">
  <input type="hidden" name="_method" value="EDIT" />
  <input type="submit" value="Edit Swimmer"/>
</form>
